// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shifts {
  id              String         @id @unique @default(uuid())
  datum           DateTime
  jaarWeek        String
  dag             Dag
  tijdslot        Tijdslots      @relation(fields: [tijdslotId], references: [id])
  tijdslotId      String
  urenGewerkt     Float
  urenBetaald     Float
  voltooid        Boolean
  winkel          Winkels        @relation(fields: [winkelId], references: [id])
  winkelId        String
  uurloon         Uurlonen       @relation(fields: [uurloonId], references: [id])
  uurloonId       String
  feestdag        Boolean
  ziek            Boolean
  bcd             Boolean
  betaalperiode   Betaalperiodes @relation(fields: [betaalperiodeId], references: [id])
  betaalperiodeId String
  werknemer       String         @default("Daan")
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model Betalingen {
  id              String         @id @unique @default(uuid())
  betaalPeriode   Betaalperiodes @relation(fields: [betaalPeriodeId], references: [id])
  betaalPeriodeId String         @unique
  bedrag          Float
  ontvangstdatum  DateTime
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model Betaalperiodes {
  id                String      @id @unique @default(uuid())
  startDatum        DateTime
  eindDatum         DateTime
  persoonlijkeBonus Boolean
  winstuitkering    Boolean
  slug              String      @unique
  shifts            Shifts[]
  betaling          Betalingen?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Uurlonen {
  id        String   @id @unique @default(uuid())
  loon      Float
  leeftijd  Int
  shifts    Shifts[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Winkels {
  id        String   @id @unique @default(uuid())
  winkelNr  String   @unique
  adres     String
  shifts    Shifts[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tijdslots {
  id          String   @id @unique @default(uuid())
  slot        String   @unique
  begin       String
  eind        String
  urenGewerkt Float
  urenBetaald Float
  shifts      Shifts[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NotificationSubscribers {
  id       String @id @unique @default(uuid())
  sub      Json
  device   String
  username String
}

enum Dag {
  MAANDAG
  DINSDAG
  WOENSDAG
  DONDERDAG
  VRIJDAG
  ZATERDAG
  ZONDAG
}
